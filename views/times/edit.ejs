<h1>Editar time</h1>
<form action="/times/<%= time.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Time</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= time.nome %>" required>
    </div>

    <div class="form-group">
        <label for="cidade">Cidade</label>
        <input type="text" class="form-control" id="cidade" name="cidade" value="<%= time.cidade %>" required>
    </div>

    <div class="form-group">
        <label for="pais">País</label>
        <input type="text" class="form-control" id="pais" name="pais" value="<%= time.pais %>" required>
    </div>

    <div class="form-group">
        <label for="fundacao">Data de Fundação</label>
        <input type="date" class="form-control" id="fundacao" name="fundacao"
            value="<%= time.fundacao ? time.fundacao.toISOString().split('T')[0] : '' %>" required>
    </div>

    <button type="submit" class="btn btn-warning">Salvar</button>
</form>